<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="game"
            type="dev.voleum.speedruncom.ui.games.GamesItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_rounded_recycler_view_item"
        android:elevation="@dimen/recycler_view_elevation"
        android:outlineProvider="bounds"
        android:padding="10dp">

        <TextView
            android:id="@+id/holder_game_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.id}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/holder_game_abbreviation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.abbreviation}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_game_id" />

        <TextView
            android:id="@+id/holder_game_weblink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.weblink}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_game_abbreviation" />

        <TextView
            android:id="@+id/holder_game_released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.released}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_game_weblink" />

        <TextView
            android:id="@+id/holder_game_romhack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.romhack}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_game_released" />

        <TextView
            android:id="@+id/holder_game_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.created}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_game_romhack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>